<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/unify_bg_color">

    <include layout="@layout/order_detail_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/order_button"/>

    <cn.beatle.parking.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/all_topbar"
        android:layout_alignParentTop="true"
        app:background_color="@android:color/transparent"
        app:leftDrawable="@mipmap/back_icon"
        app:statusbar_light="true" />
    <Button
        android:id="@+id/order_button"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/order_bg_solid_shape"
        android:text="预约车位"
        android:textColor="@android:color/white"
        android:textSize="16sp"/>
</RelativeLayout>
