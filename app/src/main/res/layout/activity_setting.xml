<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/unify_bg_color"
    tools:context=".activity.SettingActivity">

    <cn.beatle.parking.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/all_topbar"
        app:background_color="@android:color/white"
        app:leftDrawable="@mipmap/back_icon_black"
        app:statusbar_light="true"
        app:title_text="设置" />

    <TextView
        android:id="@+id/change_pwd_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_bar"
        android:background="@color/white"
        android:drawableEnd="@mipmap/right_next_icon"
        android:drawableRight="@mipmap/right_next_icon"
        android:padding="15dp"
        android:text="修改密码"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/change_tel_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/change_pwd_textView"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:drawableEnd="@mipmap/right_next_icon"
        android:drawableRight="@mipmap/right_next_icon"
        android:padding="15dp"
        android:text="修改手机号"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/change_carNo_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/change_tel_textView"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:drawableEnd="@mipmap/right_next_icon"
        android:drawableRight="@mipmap/right_next_icon"
        android:padding="15dp"
        android:text="修改车牌号"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/advice_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/change_carNo_textView"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:drawableEnd="@mipmap/right_next_icon"
        android:drawableRight="@mipmap/right_next_icon"
        android:padding="15dp"
        android:text="意见反馈"
        android:textSize="16sp" />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="@string/logout"
        android:visibility="gone" />

</RelativeLayout>